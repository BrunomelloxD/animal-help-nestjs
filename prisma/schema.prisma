generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ong {
  id               Int       @id @default(autoincrement())
  name             String
  latitude         Float
  longitude        Float
  about            String
  instructions     String
  opening_hours    String
  open_on_weekends Boolean
  id_active        Boolean
  created_at       DateTime  @default(now())
  updated_at       DateTime  @updatedAt
  deleted_at       DateTime?

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  images OngImage[]
  Animal Animal[]

  @@index([deleted_at, id])
  @@map("ongs")
}

model OngImage {
  id         String    @id @default(uuid())
  ong        Ong       @relation(fields: [ong_id], references: [id])
  ong_id     Int
  url        String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  @@index([deleted_at, id])
  @@map("ong_images")
}

model PasswordResetCode {
  id         String    @id @default(cuid())
  code       String    @unique @db.VarChar(6)
  used       Boolean   @default(false)
  expires_at DateTime?
  created_at DateTime  @default(now())
  user_id    String
  user       User      @relation(fields: [user_id], references: [id])

  @@unique([user_id, code])
  @@map("password_reset_code")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String    @unique
  password   String
  avatar_url String?
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?
  role       UserRole  @default(CUSTOMER)

  ongs               Ong[]
  passwordResetCodes PasswordResetCode[]

  @@index([deleted_at, id])
  @@map("users")
}

model Animal {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  age         Int
  species     String
  breed       String?
  adopted     Boolean   @default(false)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  deleted_at  DateTime?

  ong_id        Int
  ong           Ong           @relation(fields: [ong_id], references: [id])
  animal_images AnimalImage[]

  @@index([deleted_at, id])
  @@map("animals")
}

model AnimalImage {
  id         String    @id @default(uuid())
  animal     Animal    @relation(fields: [animal_id], references: [id])
  animal_id  Int
  url        String
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  @@index([deleted_at, id])
  @@map("animal_images")
}

enum UserRole {
  ADMIN
  CUSTOMER
}
